<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.wacif.myapplication.Microphone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/layout_microphone">

       <TableLayout
           android:id="@+id/tbl_UserInformation"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginBottom="100dp"

           >

           <TableRow
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_column="1"
                   android:text="Output to:"
                   android:layout_marginLeft="10dp"
                   />

               <Button
                   android:layout_column="2"
                   android:id="@+id/btn_RoomSelection"
                   android:text="Click to Select Destination ...."
                   android:layout_height="40dp"
                   />
           </TableRow>

           <TableRow
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_column="1"
                   android:text="Type Destination: "
                   android:layout_marginLeft="10dp"
                   />

               <EditText
                   android:layout_column="2"
                   android:id="@+id/txt_UserName"
                   android:text="192.168.0.22"
                   android:layout_width="wrap_content"

                   />
           </TableRow>
       </TableLayout>

        <ToggleButton
            android:id="@+id/btn_Microphone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@drawable/mic_button"
            android:text="@string/Microphone" />


    </LinearLayout>



</android.support.constraint.ConstraintLayout>